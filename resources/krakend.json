{
  "version": 2,
  "name": "Test API Gateway",
  "port": 8000,
  "cache_ttl": "3600s",
  "timeout": "3s",
  "extra_config": {},
  "output_encoding": "json",
  "endpoints": [
    {
      "endpoint": "/findNearbyRestaurants/{lat}/{lon}/{radius}",
      "extra_config": {
        "github.com/devopsfaith/krakend/proxy": {
          "sequential": true
        }
      },
      "method": "GET",
      "backend": [
        {
          "is_collection": true,
          "url_pattern": "/api/v1/geo?lon={lon}&lat={lat}&radius={radius}",
          "host": [
            "http://localhost:3001"
          ],
          "extra_config": {
            "github.com/devopsfaith/krakend/proxy": {
              "flatmap_filter": [
                {
                  "type": "move",
                  "args": [
                    "collection.*.id", "collection"
                  ]
                }
              ]
            }
          }
        },
        {
          "is_collection": true,
          "url_pattern": "/api/v1/company/{resp0_collection}",
          "host": [
            "http://localhost:3000"
          ]
        }
      ]
    }
  ]
}
